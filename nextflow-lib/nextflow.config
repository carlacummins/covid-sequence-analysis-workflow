profiles {
    codon {
        env {
            NXF_OPTS = '-Xms500m -Xmx3584m'       // 500MB to 3.5GB
            NXF_DEBUG = '0'
        }
//        params {
//            SARS2_FA = '../data/NC_045512.2.fa'
//            SARS2_FA_FAI = '../data/NC_045512.2.fa.fai'
//            SECRETS = '../data/projects_accounts.csv'
//        }
        cleanup = true
        singularity {
            enabled = true
            cacheDir = '/hps/nobackup/cochrane/ena/users/analyser/nextflow/singularity'
        }
        process {
            executor = 'lsf'
            container = 'docker://quay.io/nextflow/bash'
            errorStrategy = 'ignore'
            queue = 'production'
        }
        executor {
            queueSize = '100'
            submitRateLimit = '2000 second'
            time = '1h'
//            clusterOptions =
//            perJobMemLimit =
//            queue = ''
        }
        tower {
            endpoint = 'https://tower.nf'
        }
    }
    gls {
        params {
            SARS2_FA = "gs://prj-int-dev-covid19-nf-gls-poc/data/NC_045512.2.fa" //For POC project
            SARS2_FA_FAI = "gs://prj-int-dev-covid19-nf-gls-poc/data/NC_045512.2.fa.fai" //For POC project
            SECRETS = "gs://prj-int-dev-covid19-nf-gls-poc/data/projects_accounts.csv" //For POC project
        }
        env {
            NXF_OPTS = '-Xms500m'       // '-Xmx500m'
            NXF_DEBUG = '0'
        }
        process {
            executor = 'google-lifesciences'
            container = 'quay.io/nextflow/bash'
            disk = '10 GB'
            errorStrategy = 'ignore' //'ignore' 'terminate'
        }
        executor {
            queueSize = '4'
            submitRateLimit = '2000 second'
        }
        google {
            lifeSciences {
                preemptible = 'true'
                //usePrivateAddress = 'false'     // public IP is required unless everything is on GCP
            }
            location = 'europe-west2'       // 'europe-west4'
            region = 'europe-west2'      // 'europe-west4'
            project = 'prj-int-dev-ena-nft-poc-368211' // Match with projectID in nextflow-service-account-private-key.json //'prj-int-dev-covid19-nf-gls'
//            enableRequesterPaysBuckets = 'false'
        }
        tower {
            enable = true
            accessToken = "${TOWER_ACCESS_TOKEN}"
            workspaceId = '199373255459700' // TOWER Workspace ID for POC 
        }
//        timeline {
//            enabled = 'true'
//            file = 'timeline.html'
//        }
//        dag {
//            enabled = 'true'
//            file = 'flowchart.png'
//        }
        // report {
        //     enabled = 'true'
        //     overwrite = 'true'
        // }
        // trace {
        //     enabled = 'true'
        //     overwrite = 'true'
        // }
    }
}