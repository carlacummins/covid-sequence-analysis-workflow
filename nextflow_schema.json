{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/rnaseq/master/nextflow_schema.json",
    "title": "nf-core/rnaseq pipeline parameters",
    "description": "RNA sequencing analysis pipeline for gene/isoform quantification and extensive quality control.",
    "type": "object",
    "properties": {
        "$ref": "#/definitions/workflow_settings",
        "$map": {
            "INDEX": {
                "type": "string",
                "$ref": "gs://sarscov2_metadata_poc/{#/definitions/workflow_settings/pipeline}_to_be_processed.tsv"
            },
            "TEST_SUBMISSION":{
                "$ref": "/TEST_SUBMISSION"
            },
            "STUDY":{
                "$ref": "/STUDY"
            },
            "CONFIG_YAML":{
                "$ref": "gs://sarscov2_metadata_poc/{#/definitions/workflow_settings/pipeline}/config.yaml"
            },
            "SECRETS": "gs://prj-int-dev-covid19-nf-gls-poc/data/projects_accounts.csv",
            "SARS2_FA":"gs://prj-int-dev-covid19-nf-gls-poc/data/NC_045512.2.fa",
            "SARS2_FA_FAI":"gs://prj-int-dev-covid19-nf-gls-poc/data/NC_045512.2.fa.fai",
            "OUTDIR":{
                "$ref": "gs://prj-int-dev-covid19-nf-gls-poc/{#/definitions/workflow_settings/snapshot_date}/{#/definitions/workflow_settings/pipeline}/publishDir"
            },
            "STOREDIR":{
                "$ref": "gs://prj-int-dev-covid19-nf-gls-poc/{#/definitions/workflow_settings/snapshot_date}/{#/definitions/workflow_settings/pipeline}/storeDir"
            },
            "WORKDIR":{
                "$ref":  "gs://prj-int-dev-covid19-nf-gls-poc/{#/definitions/workflow_settings/snapshot_date}/{#/definitions/workflow_settings/pipeline}/workDir"
            }

        }
    },
    "definitions": {
        "workflow_settings": {
            "title": "Workflow options",
            "type": "object",
            "fa_icon": "fas fa-terminal",
            "description": "Define where the pipeline should find input data and save output data.",
            "required": ["outdir"],
            "properties": {
                "TEST_SUBMISSION": {
                    "type": "boolean",
                    "fa_icon": "fas fa-file-csv",
                    "default": true
                },
                "STUDY": {
                    "type": "string",
                    "hidden": true,
                    "description": "The output directory where the results will be saved. You have to use absolute paths to storage on Cloud infrastructure.",
                    "fa_icon": "fas fa-folder-open",
                    "default": "PRJEB45555"
                },
                "snapshot_date": {
                    "type": "string",
                    "enum": [
                        "2022-06-26",
                        "2022-10-24",
                        "2022-11-21",
                        "2022-12-19"
                    ]
                },
                "pipeline": {
                    "type": "string",
                    "enum": [
                        "illumina",
                        "nanopore"
                    ]
                }
            }
        }
    },
    "allOf": [
        {}
    ]
}