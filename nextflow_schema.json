{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/rnaseq/master/nextflow_schema.json",
    "title": "nf-core/rnaseq pipeline parameters",
    "description": "RNA sequencing analysis pipeline for gene/isoform quantification and extensive quality control.",
    "type": "object",
    "properties": {
        "INDEX": {
            "$ref": "gs://sarscov2_metadata_poc/{#/definitions/workflow_settings/pipeline}_to_be_processed.tsv"
        }
    },
    "definitions": {
        "umi_options": {
            "title": "UMI options",
            "type": "object",
            "description": "Options for processing reads with unique molecular identifiers",
            "default": "",
            "properties": {
                "with_umi": {
                    "type": "boolean",
                    "fa_icon": "fas fa-barcode",
                    "description": "Enable UMI-based read deduplication."
                }
            }
        },
        "workflow_settings": {
            "title": "Workflow options",
            "type": "object",
            "fa_icon": "fas fa-terminal",
            "description": "Define where the pipeline should find input data and save output data.",
            "required": ["TEST_SUBMISSION"],
            "properties": {
                "TEST_SUBMISSION": {
                    "type": "boolean",
                    "fa_icon": "fas fa-file-csv",
                    "default": true
                },
                "STUDY": {
                    "type": "string",
                    "hidden": true,
                    "description": "The output directory where the results will be saved. You have to use absolute paths to storage on Cloud infrastructure.",
                    "fa_icon": "fas fa-folder-open",
                    "default": "PRJEB45555"
                },
                "snapshot_date": {
                    "type": "string", 
                    "enum": [
                        "2022-06-26",
                        "2022-10-24",
                        "2022-11-21",
                        "2022-12-19"
                    ]
                },
                "pipeline": {
                    "type": "string",
                    "default": "illumina",
                    "enum": [
                        "illumina",
                        "nanopore"
                    ]
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/workflow_settings"
        },
        {
            "$ref": "#/definitions/umi_options"
        }
    ]
}